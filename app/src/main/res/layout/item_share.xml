<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_user_info"
            android:layout_width="wrap_content"
            android:textColor="@color/base_text_black"
            android:textSize="18sp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_user_tel"
            android:textColor="@color/blue"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/icon_phone"
            android:gravity="center_vertical"
            android:drawablePadding="5dp"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/base_text_black"
        android:textSize="16sp"
        android:id="@+id/tv_share_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:background="@color/base_text_gray_light"
        android:id="@+id/ly_h5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:padding="3dp"
        android:visibility="gone"
        android:layout_height="60dp">

        <ImageView
            android:src="@mipmap/ic_launcher"
            android:id="@+id/img_h5_content"
            android:layout_width="50dp"
            android:layout_gravity="center_vertical"
            android:layout_height="50dp" />

        <TextView
            android:textSize="14sp"
            android:layout_marginLeft="10dp"

            android:textColor="@color/base_text_black"
            android:id="@+id/tv_h5_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="2dp"
        android:background="@color/base_text_gray_light"
        android:id="@+id/ly_file"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:padding="3dp"
        android:visibility="gone"
        android:layout_height="60dp">


        <TextView
            android:id="@+id/tv_file_type"
            android:layout_gravity="center_vertical"
            android:layout_width="50dp"
            android:background="#ca4546"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_height="50dp" />

        <TextView
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/base_text_black"
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_file_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/base_text_gray_light"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"/>
    
</LinearLayout>