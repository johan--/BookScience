<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/base_bg_gray"
    tools:context="com.yangqichao.bokuscience.business.ui.mine.FeedBackActivity">


    <RelativeLayout
        android:background="@color/base_orange"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">
        <ImageView
            android:id="@+id/img_back"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="用户反馈"
            android:textSize="18sp"
            android:id="@+id/tv_title"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="提交"
            android:textSize="16sp"
            android:id="@+id/tv_submit"
            android:textColor="@color/white"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        android:layout_marginTop="5dp"
        android:text="请选择发生的场景"
        android:textSize="14sp"
        android:textColor="@color/base_text_gray_dark"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_feed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="5dp"
        android:text="反馈内容"
        android:textSize="14sp"
        android:textColor="@color/base_text_gray_dark"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_feedback"
        android:background="@color/white"
        android:textSize="14sp"
        android:padding="10dp"
        android:gravity="left|top"
        android:textColorHint="@color/gray_text"
        android:hint="请详细描述您的问题，以便我们能快速解决..."
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_marginBottom="35dp"
        android:layout_height="0dp" />


</LinearLayout>
