<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/base_bg_gray"
    tools:context="com.yangqichao.bokuscience.business.ui.mine.ChangePWActivity">


    <RelativeLayout
        android:background="@color/base_orange"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">
        <ImageView
            android:id="@+id/img_back"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="修改密码"
            android:textSize="18sp"
            android:id="@+id/tv_title"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="完成"
            android:layout_marginRight="10dp"
            android:textSize="16sp"
            android:id="@+id/tv_submit"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:layout_height="50dp">

        <TextView
            android:text="手机号"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/base_text_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        <EditText
            android:id="@+id/et_phone"
            android:hint="请输入手机号"
            android:textColor="@color/base_text_black"
            android:textSize="16dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:layout_marginLeft="30dp"
            android:padding="5dp"
            android:layout_height="match_parent" />


    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:layout_height="50dp">

        <TextView
            android:text="旧密码"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/base_text_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_old_pw"
            android:hint="请输入原密码"
            android:textColor="@color/base_text_black"
            android:textSize="16dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:layout_marginLeft="30dp"
            android:padding="5dp"
            android:layout_height="match_parent" />


    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:layout_height="50dp">

        <TextView
            android:text="新密码"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/base_text_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_new_pw"
            android:hint="请输入新密码"
            android:textColor="@color/base_text_black"
            android:textSize="16dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:layout_marginLeft="30dp"
            android:padding="5dp"
            android:layout_height="match_parent" />


    </LinearLayout>
</LinearLayout>
