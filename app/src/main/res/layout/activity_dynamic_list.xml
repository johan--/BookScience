<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yangqichao.bokuscience.business.ui.message.DynamicListActivity">

    <RelativeLayout
        android:background="@color/base_orange"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/img_back"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_back"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/white"
                    android:text="院内动态"
                    android:textSize="16sp"
                    android:id="@+id/tv_hospital_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:id="@+id/view_bttom_hopital"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="3dp"
                    android:background="@color/white"
                    android:layout_width="60dp"
                    android:visibility="gone"
                    android:layout_height="1.5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="2dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/white"
                    android:text="系统动态"
                    android:textSize="16sp"
                    android:id="@+id/tv_sys_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:id="@+id/view_bttom_sys"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="3dp"
                    android:visibility="gone"
                    android:background="@color/white"
                    android:layout_width="60dp"
                    android:layout_height="1.5dp"/>
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>


    <FrameLayout
        android:id="@+id/framelayout_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
</LinearLayout>
