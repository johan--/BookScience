<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yangqichao.bokuscience.business.ui.book.MyBookMainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/base_orange">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/btn_back" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_hospital_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的期刊"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/view_bttom_hopital"
                    android:layout_width="60dp"
                    android:layout_height="1.5dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="3dp"
                    android:background="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="2dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_sys_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的书籍"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/view_bttom_sys"
                    android:layout_width="60dp"
                    android:layout_height="1.5dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="3dp"
                    android:background="@color/white" />
            </LinearLayout>

        </LinearLayout>


        <ImageView
            android:id="@+id/img_video_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:padding="10dp"
            android:src="@drawable/icon_nav_search"
            android:visibility="gone" />


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/framelayout_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
</LinearLayout>
