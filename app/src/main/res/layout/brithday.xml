<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/bg_pop_bothday"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_brithday_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/brithday"
        android:textColor="@color/red"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView7"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/img_brithday"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/imageView7" />

    <ImageView
        android:id="@+id/img_brithday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/btn_pop_birthday"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView7"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/imageView7"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:text="过生日也要长知识"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/img_brithday"
        app:layout_constraintLeft_toLeftOf="@+id/img_brithday"
        app:layout_constraintRight_toRightOf="@+id/img_brithday" />
</android.support.constraint.ConstraintLayout>
