<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/item_book"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="125dp">

        <ImageView
            android:id="@+id/img_book"
            android:src="@drawable/icon_book_null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        
        <TextView
            android:id="@+id/tv_download"
            android:layout_width="50dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="下载"
            android:visibility="gone"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:background="@drawable/corner_black"
            android:layout_height="25dp" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_book_name"
        android:textColor="@color/base_text_black"
        android:textSize="14sp"
        android:maxLines="2"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_gravity="center"
        android:id="@+id/tv_book_type"
        android:lines="1"
        android:textColor="@color/base_text_gray_dark"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
